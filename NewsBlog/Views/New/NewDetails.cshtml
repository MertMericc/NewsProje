@model EntityLayer.Concrete.New
@{
    ViewData["Title"] = "NewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">@Model.Title</p>
            <form class="forms-sample">
                @Html.HiddenFor(x => x.NewID, new { @class = "form-control" })
                <div class="form-group">
                    <label>Başlık</label>
                    @Model.Title
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    @Model.Description
                </div>
                <div class="form-group">

                    <img src="@Model.ImageURL" width="200" height="200" />
                </div>
                <div class="form-group">
                    @Model.Category
                </div>
                @await Component.InvokeAsync("Comment")
            </form>
        </div>
    </div>
</div>
